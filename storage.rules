rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Правила для материалов уроков
    // Доступ на чтение для всех авторизованных пользователей
    match /lessons/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // Загрузка только через консоль администратора
    }

    // Запрет на всё остальное по умолчанию
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
