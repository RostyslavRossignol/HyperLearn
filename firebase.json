{
	"hosting": {
		"public": ".",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		
		"rewrites": [
			{
				"source": "/",
				"destination": "/landing.html"
			},
			{
				"source": "/index.html",
				"destination": "/index.html"
			},
			
			{
				"source": "/api/**",
				"function": "aiGrade"
			}
		]
	},
	
	"functions": {
		"source": "functions"
	},
	"firestore": {
		"rules": "firestore.rules"
	},
	"storage": {
		"rules": "storage.rules"
	}
}
